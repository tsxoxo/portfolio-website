---
import { Image } from 'astro:assets'
import { Trans, HeadHrefLangs } from 'astro-i18next/components'
import { t } from 'i18next'
import ContactButton from './ui/ContactButton.astro'

import heroImage from '@assets/images/me-bw.jpeg'
---

<section
	data--testid="hero"
	class="hero-grid pt-space-fl-xl-m leading-relaxed"
	id="hero"
>
	<div class="grid gap-space-fl-xl [text-wrap:balance]">
		<hgroup>
			<h1>{t('home.hero.heading')}</h1>
			<p class="text-fl-lg text-grey">{t('home.hero.subheading')}</p>
		</hgroup>
		<p class="leading-loose">{t('home.hero.what-raw')}</p>
		<p>{t('home.hero.cta')}</p>
		<div>
			<ContactButton />
		</div>
	</div>

	<Image
		src={heroImage}
		alt="The author of this website, smiling in black and white"
		class="hidden h-full w-full object-cover object-top md:block"
	/>

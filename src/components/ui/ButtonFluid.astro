---
import { HTMLTag, Polymorphic } from 'astro/types'

type Props<Tag extends HTMLTag> = Polymorphic<{
	as: Tag
	style?: 'primary'
	class?: string
	[x: string]: any
}>

const {
	as: Tag = 'button',
	size = 'md',
	style = 'primary',
	class: className,
	...rest
} = Astro.props

const styles = {
	primary: 'bg-black text-light hover:bg-accent  border-2 border-transparent',
	outlined:
		'border border-black text-black hover:bg-accent focus:outline-none focus:ring-2 focus:ring-accent focus:ring-opacity-75'
}
---

<Tag
	{...rest}
	class:list={[
		'inline-block rounded-sm px-space-fl-s py-space-fl-xs text-center transition focus-visible:ring-2 ring-offset-2 ring-accent max-w-fit',
		styles[style],
		className
	]}
>
	<slot />
</Tag>

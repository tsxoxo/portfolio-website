---
import { Picture } from '@astrojs/image/components'
import { Trans, HeadHrefLangs } from 'astro-i18next/components'
import { t } from 'i18next'
import ContactButton from './ui/ContactButton.astro'

import heroImage from '@assets/images/me-bw.jpeg'
---

<section
	data--testid="hero"
	class="grid gap-space-fl-2xl leading-relaxed lg:auto-cols-fr lg:grid-flow-col lg:grid-cols-[minmax(0,2fr)]"
	id="hero"
>
	<div class="grid gap-space-fl-xl [text-wrap:balance]">
		<hgroup>
			<h1 class="text-fl-2xl">{t('home.hero.heading')}</h1>
			<p class="text-fl-lg text-grey">{t('home.hero.subheading')}</p>
		</hgroup>
		<p class="leading-loose">{t('home.hero.what-raw')}</p>
		<p>{t('home.hero.cta')}</p>
		<div>
			<ContactButton />
		</div>
	</div>

	<Picture
		src={heroImage}
		alt="Tom Szwaja"
		widths={[400, 640]}
		sizes="33vw"
		aspectRatio="1395â€Š:1887"
		loading="eager"
		class="hidden h-full w-full object-cover object-top lg:block"
	/>
</section>

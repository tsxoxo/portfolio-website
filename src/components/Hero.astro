---
import { Image } from 'astro:assets'
import ContactButton from './ui/ContactButton.astro'

import heroImage from '@assets/images/me-bw.jpeg'

import { getLangFromUrl, useTranslations } from '../i18n/utils'

const lang = getLangFromUrl(Astro.url)
const t = useTranslations(lang)
---

<section
	data--testid="hero"
	class="hero-grid pt-space-fl-xl-m leading-relaxed"
	id="hero"
>
	<div class="grid gap-space-fl-xl [text-wrap:balance]">
		<hgroup>
			<h1>{t('hero.heading')}</h1>
			<p class="text-fl-lg text-grey">{t('hero.subheading')}</p>
		</hgroup>
		<p class="leading-loose">{t('hero.what-raw')}</p>
		<p>{t('hero.cta')}</p>
		<div>
			<ContactButton />
		</div>
	</div>

	<Image
		src={heroImage}
		alt="The author of this website, smiling in black and white"
		class="hidden h-full w-full object-cover object-top md:block"
	/>
